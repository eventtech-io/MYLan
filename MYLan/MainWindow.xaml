<Window x:Class="DhcpFieldServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DHCP Field Server" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Server Network Adapter (will be 192.168.1.1)" Margin="0,0,0,5" FontWeight="Bold"/>
            <ComboBox Name="ServerNicCombo" Width="350" Margin="0,0,0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,10">
            <Button Name="StartBtn" Content="Start DHCP Server" Width="150" Margin="0,0,10,0" Click="StartBtn_Click"/>
            <Button Name="StopBtn" Content="Stop DHCP Server" Width="150" Click="StopBtn_Click" IsEnabled="False"/>
            <TextBlock Name="StatusText" Margin="20,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <GroupBox Header="Log" Grid.Row="2" Margin="0,0,0,10">
            <TextBox Name="LogBox"
                     FontFamily="Consolas"
                     FontSize="12"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"/>
        </GroupBox>

        <TextBlock Grid.Row="3" Text="DHCP uses UDP/67 and will set a static IP on the selected adapter."
                   FontSize="11" Foreground="Gray"/>
    </Grid>
</Window>
